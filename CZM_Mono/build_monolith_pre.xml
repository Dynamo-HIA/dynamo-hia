<project name="CZM_Mono" basedir="." default="main">

	<!-- Own subdirectories. -->
	<property name="com.dir" value="com" />
	<property name="org.dir" value="org" />
	<property name="nl.dir" value="nl" />
	<property name="jamaclasses.dir" value="Jama" />
	<property name="czm_mono.dir" value="czm_mono" />
	<property name="schemas.dir" value="schemas" />
	<property name="images.dir" value="images" />
	<property name="ini.dir" value="ini" />
	<property name="icons.dir" value="icons" />
	<property name="help.dir" value="help" />

	<property name="contrib_name" value="build_monolith_mkii.xml" />

	<!-- Subproject directories -->
	<property name="jama.dir" value="../Jama/" />
	<property name="org.apache.commons.lang.dir" value="../org.apache.commons.lang/" />
	<property name="org.apache.commons.logging.dir" value="../org.apache.commons.logging/" />
	<property name="org.apache.log4j.dir" value="../org.apache.log4j/" />
	<property name="org.apache.commons.collections.dir" value="../org.apache.commons.collections/" />
	<property name="org.apache.commons.configuration.dir" value="../org.apache.commons.configuration/" />
	<property name="org.apache.commons.configuration.classes.dir" value="../org.apache.commons.configuration/classes/" />
	<property name="org.jfree.chart.dir" value="../org.jfree.chart/" />
	<property name="org.jfree.experimental.chart.dir" value="../org.jfree.experimental.chart/" />
	<property name="org.jfree.jcommons.dir" value="../org.jfree.jcommons/" />

	<property name="czm_mono.dir" value="../CZM_Mono/" />

	<property name="czm.dir" value="../CZM/" />
	<property name="dynamo_hia_ui.dir" value="../Dynamo-HIA_UI/" />

	<target name="introduction">
		<echo message="Project ${ant.project.name}, starting ${ant.file}.">
		</echo>
	</target>

	<!-- ClassPath for use in all subproject builds -->
	<path id="cross.project.class.path">
		<pathelement path="${org.apache.commons.logging.dir}" />
		<pathelement path="${org.apache.log4j.dir}" />
		<pathelement path="${org.apache.commons.configuration.dir}/classes" />
		<pathelement path="${org.jfree.chart.dir}" />
		<pathelement path="${org.jfree.experimental.chart.dir}" />
		<pathelement path="${org.jfree.jcommons.dir}" />
		<pathelement path="${jama.dir}" />
		<pathelement path="${junit.dir}/classes" />
		<pathelement path="${czm.dir}/classes" />
	</path>

	<target name="echoclasspath">
		<path refid="cross.project.class.path" />
	</target>

	<target name="clean">
		<delete dir="${com.dir}" failonerror="true" />
		<delete dir="${org.dir}" failonerror="true" />
		<delete dir="${nl.dir}" failonerror="true" />
		<delete dir="${jamaclasses.dir}" failonerror="true" />
		<delete dir="${czm_mono.dir}" failonerror="true" />
		<delete dir="${schemas.dir}" failonerror="true" />
		<delete dir="${images.dir}" failonerror="true" />
		<delete dir="${ini.dir}" failonerror="true" />
		<delete dir="${help.dir}" failonerror="true" />
	</target>

	<target name="fill">
		<!-- Run the contributor ant-files and isolate them from this one (for now) -->
		<ant antfile="${org.jfree.chart.dir}${contrib_name}" dir="${org.jfree.chart.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.jfree.experimental.chart.dir}${contrib_name}" dir="${org.jfree.experimental.chart.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.jfree.jcommons.dir}${contrib_name}" dir="${org.jfree.jcommons.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${jama.dir}${contrib_name}" dir="${jama.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.apache.commons.collections.dir}${contrib_name}" dir="${org.apache.commons.collections.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.apache.commons.configuration.dir}${contrib_name}" dir="${org.apache.commons.configuration.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.apache.commons.lang.dir}${contrib_name}" dir="${org.apache.commons.lang.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.apache.commons.logging.dir}${contrib_name}" dir="${org.apache.commons.logging.dir}" inheritall="true" inheritrefs="true" />
		<ant antfile="${org.apache.log4j.dir}${contrib_name}" dir="${org.apache.log4j.dir}" inheritall="true" inheritrefs="false" />
		<ant antfile="${czm.dir}${contrib_name}" dir="${czm.dir}" inheritall="true" inheritrefs="true" />
		<eclipse.refreshLocal resource="${org.apache.commons.configuration.dir}/classes" depth="infinite" />
		<ant antfile="${dynamo_hia_ui.dir}${contrib_name}" dir="${dynamo_hia_ui.dir}" inheritall="true" inheritrefs="true" />
	</target>

	<target name="main" depends="introduction,clean,fill" />

</project>
