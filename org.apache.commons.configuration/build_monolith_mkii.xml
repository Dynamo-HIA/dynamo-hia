<!-- Just chuck all class files into the CZM_Mono class-directory. -->
<project name="org.apache.commons.collections" basedir="." default="main">
	<property name="product.dir" value="../CZM_Mono/" />

	<target name="introduction">
		<echo message="Starting ${ant.file} in project ${ant.project.name}"></echo>
		</target>

	<target name="compile">
		<ant antfile="build-xmlconfiguration.xml" dir="${basedir}" inheritall="false" inheritrefs="false" />
	</target>

	<target name="copy2czm_mono">
		<copy todir="${product.dir}" overwrite="true">
			<fileset dir="${basedir}/classes">
				<patternset>
					<include name="**/*.class" />
				</patternset>
			</fileset>
		</copy>
	</target>

	<target name="main" depends="introduction,compile,copy2czm_mono" />

</project>
