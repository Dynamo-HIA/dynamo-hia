<project name="Dynamo-HIA_UI" basedir="." default="main">

	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="jar.dir" value="${build.dir}/addimages" />
	<property name="lib.dir" value="lib" />
	<property name="plugins.dir" value="C:/dynamo/eclipse341/plugins" />
	<property name="images.dir" value="images" />
	<property name="ini.dir" value="ini" />
	<property name="schemas.dir" value="schemas" />
	<property name="help.dir" value="help" />
	<property name="nl.rivm.emi.dynamo.dir" value="../copy2czm_mono" />
	<property name="czm_mono.dir" value="../CZM_Mono" />


	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${czm_mono.dir}/nl" />
		<delete dir="${czm_mono.dir}/images" />
		<delete dir="${czm_mono.dir}/ini" />
		<delete dir="${czm_mono.dir}/schemas" />
		<delete dir="${czm_mono.dir}/help" />
	</target>

	<target name="clean-build">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile">
		<!-- <echo message="${java.class.path}" /> -->
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" source="1.6" verbose="true">
			<patternset>
				<include name="**/*.java" />
				<exclude name="**/test/**" />
			</patternset>
			<classpath>
				<path refid="cross.project.class.path" />
				<pathelement path="${plugins.dir}/org.apache.commons.lang_2.3.0.v200803061910.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.jface_3.4.1.M20080827-2000.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.core.commands_3.4.0.I20080509-2000.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.jface.databinding_1.2.1.M20080827-0800a.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.core.resources_3.4.1.R34x_v20080902.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.core.runtime_3.4.0.v20080512.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.core.runtime.compatibility_3.2.0.v20071008.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.osgi_3.4.2.R34x_v20080826-1230.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.ui_3.4.1.M20080910-0800.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.ui.workbench_3.4.1.M20080827-0800a.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.text_3.4.0.v20080605-1800.jar" />
				<pathelement path="${plugins.dir}/org.eclipse.jface.text_3.4.1.r341_v20080827-1100.jar" />
			</classpath>
		</javac>
	</target>

	<target name="addimages" depends="compile">
		<!-- <mkdir dir="${images.dir}" /> -->
		<copy todir="${classes.dir}/images">
			<fileset dir="${images.dir}" />
		</copy>
	</target>

	<target name="copy2czm_mono">
		<copy todir="${czm_mono.dir}/classes" overwrite="true">
			<fileset dir="${classes.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/images" overwrite="true">
			<fileset dir="${images.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/ini" overwrite="true">
			<fileset dir="${ini.dir}">
				<exclude name="lastopened.ini" />
			</fileset>
		</copy>
		<copy todir="${czm_mono.dir}/schemas" overwrite="true">
			<fileset dir="${schemas.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/help" overwrite="true">
			<fileset dir="${help.dir}" />
		</copy>
	</target>

	<target name="main" depends="clean,compile,addimages,copy2czm_mono" />

</project>
