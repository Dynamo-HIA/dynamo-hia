<project name="Dynamo-HIA_UI" basedir="." default="main">

	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="jar.dir" value="${build.dir}/addimages" />
	<property name="lib.dir" value="lib" />
	<property name="plugins.dir" value="C:/dynamo/eclipse341/plugins" />
	<property name="images.dir" value="images" />
	<property name="ini.dir" value="ini" />
	<property name="schemas.dir" value="schemas" />
	<property name="help.dir" value="help" />
	<property name="nl.rivm.emi.dynamo.dir" value="../copy2czm_mono" />
	<property name="czm_mono.dir" value="../CZM_Mono" />



	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${copy2czm_mono.dir}/nl" />
		<delete dir="${czm_mono.dir}/images" />
		<delete dir="${czm_mono.dir}/ini" />
		<delete dir="${czm_mono.dir}/schemas" />
		<delete dir="${czm_mono.dir}/help" />
	</target>

	<target name="clean-build">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile">
		<echo message="${java.class.path}" />
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" source="1.6">
			<patternset>
				<include name="**/*.java" />
				<exclude name="**/test/**" />
			</patternset>
			<classpath refid="cross.project.class.path" />
		</javac>
	</target>

	<target name="addimages" depends="compile">
		<mkdir dir="${addimages.dir}" />
		<copy todir="${classes.dir}/images">
			<fileset dir="${images.dir}" />
		</copy>
	</target>

	<target name="copy2czm_mono">
		<copy todir="${czm_mono.dir}/classes" overwrite="true">
			<fileset dir="${classes.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/images" overwrite="true">
			<fileset dir="${images.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/ini" overwrite="true">
			<fileset dir="${ini.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/schemas" overwrite="true">
			<fileset dir="${schemas.dir}" />
		</copy>
		<copy todir="${czm_mono.dir}/help" overwrite="true">
			<fileset dir="${help.dir}" />
		</copy>
	</target>

	<target name="main" depends="clean,addimages,copy2czm_mono" />

</project>
