<!-- Just chuck all class files into the CZM_Mono class-directory. -->
<project name="Jama" basedir="." default="copy2czm_mono">
	<property name="product.dir" value="../CZM_Mono/" />

	<target name="introduction">
		<echo message="Project ${ant.project.name} starting ${ant.file}"></echo>
		</target>

	<target name="copy2czm_mono" depends="introduction">
		<copy todir="${product.dir}" overwrite="true">
			<fileset dir="${basedir}">
				<patternset>
					<include name="*/*.class" />
					<include name="**/*.class" />
				</patternset>
			</fileset>
		</copy>
	</target>
</project>
