<!-- Just chuck all class files into the CZM_Mono class-directory. -->
<project name="Jama" basedir="." default="copy2czm_mono">
	
	<property name="czm_mono.dir" value="../CZM_Mono/" />

	<target name="introduction">
		<echo message="Starting ${ant.file} in project ${ant.project.name}"></echo>
		</target>

	<target name="copy2czm_mono" depends="introduction">
		<copy todir="${czm_mono.dir}" overwrite="true">
			<fileset dir="${basedir}">
				<patternset>
					<include name="**/*.class" />
				</patternset>
			</fileset>
		</copy>
	</target>
</project>
