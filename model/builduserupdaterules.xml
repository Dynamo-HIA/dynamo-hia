<project name="UserUpdateRules" basedir="." default="main">
	<!--
		Build-file for building user updaterules from a Java application.
		Various properties are initialized with obvious bogus values and
		should be overridden from within the using application.
	-->
	<property name="src.dir" value="xyz" />
	<property name="build.dir" value="xyz" />
	<property name="lib.dir" value="lib" />
	<property name="class.path" value="xyz" />

	<target name="introduction">
		<echo message="Starting ${ant.file} in project ${ant.project.name}"></echo>
	</target>

	<target name="compile">
		<javac srcdir="${src.dir}" destdir="${build.dir}" source="1.6"
			verbose="true">
			<patternset>
				<include name="**/*.java" />
				<exclude name="**/test/**" />
				<exclude name="**\\test\\**" />
			</patternset>
			<classpath>
				<pathelement path="${class.path}" />
			</classpath>
		</javac>
	</target>

	<target name="main" depends="introduction, compile" />

</project>
