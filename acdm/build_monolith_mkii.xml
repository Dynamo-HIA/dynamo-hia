<!-- File started out as a copy of the Dynamo-HIA_UI one and was cleaned out by remming out for now. -->
<project name="CZM" basedir="." default="main">
	<property name="product.dir" value="../CZM_Mono/" />
	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="lib.dir" value="lib" />

	<target name="introduction">
		<echo message="Starting ${ant.file} in project ${ant.project.name}">
		</echo>
	</target>


	<target name="clean">
		<delete dir="${product.dir}/nl" />
		<delete dir="${classes.dir}" />
	</target>

	<target name="compile">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" source="1.6" verbose="true">
			<patternset>
				<include name="**/*.java" />
				<exclude name="**/test/**" />
				<exclude name="**\\test\\**" />
			</patternset>
			<classpath>
				<path refid="cross.project.class.path" />
				<pathelement path="../org.apache.commons.lang/" />
			</classpath>
		</javac>
	</target>

	<target name="copy2czm_mono">
		<copy todir="${product.dir}" overwrite="true">
			<fileset dir="${classes.dir}" />
		</copy>
	</target>

	<target name="main" depends="introduction, clean,compile,copy2czm_mono" />

</project>
